{
  "compilerOptions": {
    "incremental": true,
    "outDir": ".",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2017",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
