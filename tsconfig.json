{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
